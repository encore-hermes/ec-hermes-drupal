<Context>
	<Resource name="jdbc/drupal"
			  auth="Container"
			  type="javax.sql.DataSource" 
			  driverClassName="com.mysql.jdbc.Driver" 
			  username="drupal"
			  password="drupal" 
			  url="jdbc:mysql://localhost:3306/drupal"
			  maxActive="4" 
			  maxIdle="2" 
			  maxWait="5000" 
			  /> 

	<Resource name="jdbc/larinde"
			  auth="Container"
			  type="javax.sql.DataSource" 
			  driverClassName="com.mysql.jdbc.Driver" 
			  url="jdbc:mysql://localhost:3306/larinde"
			  username="larinde"
			  password="larinde" 
			  maxActive="4" 
			  maxIdle="2" 
			  maxWait="5000" 
			  /> 
</Context>
